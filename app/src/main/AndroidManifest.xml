<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.fitbit.fitbitapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.fitbit.fitbitapp.CLIENT_ID"
            android:value="227YZT"/>
        <meta-data
            android:name="com.fitbit.fitbitapp.REDIRECT_URL"
            android:value="https://finished"/>

        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Fitbit.Teal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity"
                  android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>